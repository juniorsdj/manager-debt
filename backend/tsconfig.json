{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./dist",
      "typeRoots": [
          "./node_modules/@types",
          "./src/@types"
      ],
      "incremental": true,
      "strict": true,
      "resolveJsonModule": true,
      "strictPropertyInitialization": false,
      "allowJs": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "removeComments": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true
    }
  }
  